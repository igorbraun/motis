include "base/Station.fbs";
include "base/TripId.fbs";

namespace motis.paxmon;

enum TransferType : byte { NONE, SAME_STATION, FOOTPATH }

table TransferInfo {
  type: TransferType;
  duration: uint;
}

table CompactJourneyLeg {
  trip: motis.TripId;
  enter_station: motis.Station;
  exit_station: motis.Station;
  enter_time: long;
  exit_time: long;
  enter_transfer: TransferInfo;
}

table CompactJourney {
  legs: [CompactJourneyLeg];
}
